<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <!--<td><%= friend.image %></td>-->
        <td><%= image_tag friend.image_url.to_s %></td>
        <td><%= link_to 'Show', friend %></td>
        <!--<td><%= link_to 'Edit', edit_friend_path(friend) %></td>-->
        <td><%= link_to 'Remove', friend, method: :delete, data: { confirm: 'Are you sure?' } %>
        <!--<td><%=link_to 'Add friend', friend %></td>-->  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

