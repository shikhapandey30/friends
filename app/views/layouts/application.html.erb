<!DOCTYPE html>
<html>
  <head>
    <title>Friendship</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"> FRIENDSHIP</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/frinds/whatever">Home</a></li>
            
            <li><a href="/users/sign_up">Registration</a></li>
            <li><a href="/users/sign_in">Login</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>

  </head>

  <body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.js"></script>
    <!-- bxSlider CSS file -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.css" rel="stylesheet" />
    
    <script type="text/javascript">
      setTimeout(function(){
        $('.bxslider').bxSlider({
        auto: true,
        autoControls: true,
        
        stopAutoOnClick: true,
        pager: true,

        slideWidth: 1000,
         });
       },2000);
    </script><table border="2px" width="50%" align="center"><td bgcolor="skyblue">
     <div class="bxslider" align="center">
      <div align="center"><%= image_tag asset_path("logos/0.jpg")%></div>
      <div align="center"><%= image_tag asset_path("logos/56.jpg")%></div>
      <div align="center"><%= image_tag asset_path ("logos/56.jpg")%></div>
    </div></td>
  </table>
     <%= form_tag(frinds_whatever_path, :method => "get", id: "search-form") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Search friends", class: "form-control" %> 
         <br>
         <p align="center">
          <%= submit_tag "Search", :email => nil, class: "btn btn-primary" %>
        <button type="button"
          onclick="document.getElementById('date_time_button').innerHTML = Date()">
          Click and see Date and Time.
        </button>

        <p id="date_time_button"></p>
           </p>
           <hr >
           <br>
      <% end %>
  <table border="0px" align="center" width="20%" >
    <td>
        <div id="user_nav">
          <% if user_signed_in? %>
            Signed in as <%= current_user.email %>. Not you?
            <%= link_to "My Profile", frinds_myprofile_path, class: "btn btn-primary" %>
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-primary" %>
          <% else %>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>&nbsp;&nbsp;&nbsp; or&nbsp;&nbsp;&nbsp; <%= link_to "sign in", new_user_session_path, class: "btn btn-primary" %>
          <% end %>
      </div>
    </td>  
  </table>
  <%= yield %>
    
  </body><br><br>
  <footer class="page-footer font-small blue fixed-bottom">
    <div class="footer-copyright text-center py-3">Â© 2018 Copyright:
    </div>
  </footer>
</html>