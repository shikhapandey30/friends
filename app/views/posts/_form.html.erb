<div class='container-fluid login bg-dark-grey login-form' >
  <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group text-center">
      <h3 class="mb40"></h3>
    </div> 
    <div class="login-white-box">
      <div class="form-group">
        <%= form.hidden_field :user_id, :value => current_user.id %>
      </div>  
      <div class="form-group">
      
      <%#= form.label :Topic %>
      <%#= form.text_area :topic, class: 'form-control input-form-control' %>
      <%= form.select(:category_id, Category.all.collect {|s| [s.name, s.id]}, {:include_blank => "Select"}, class: "select", "data-errormessage-value-missing"=>"Please select category") %>
    </div><br>
      <div class="form-group">
                            
        
        <%= form.label :Headlines %>
        <%= form.text_area :post_text, class: 'form-control input-form-control' %>
      </div>
      <div class="form-group">
      <%= form.label :Description %>
      <%= form.text_area :attachment, class: 'form-control input-form-control' %>
      </div>
      
      <div class="form-group row">
        <div class="col-md-12">
          <div class="pull-left">
             <div class="actions">
              <%= form.submit %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>  
