<%= render "devise/shared/links" %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
      <style type="text/css">
        .login-form {
          width: 370px;
            margin: 50px auto;
            
        }
          .login-form form {
            margin-bottom: 15px;
              background: #5f4d4d45;
              box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
              padding: 30px;
          }
          .login-form h2 {
              margin: 0 0 15px;
          }
          .form-control, .btn {
              min-height: 38px;
              border-radius: 2px;
          }
          .btn {        
              font-size: 15px;
              font-weight: bold;
          }
      </style>
  </head> 
  <body>  
    
    <div class='container-fluid login bg-dark-grey login-form' >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group text-center">
          <h3 class="mb40">Sign Up</h3>
        </div> 
        <div class="login-white-box">
          <%= devise_error_messages! %>
          <% flash.each do |key, value| %>
            <% if(value != "Signed out successfully.") %>
              <div class="flash alert alert-warning <%= key %>"><%= value %></div>
            <% end%>
          <% end %>
          
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-form-control" %>
          </div>
          <div class="form-group">
             <%= f.label :firstname %><br />

             <%= f.text_field :firstname,  autofocus: true, autocomplete: "firstname", class: "form-control input-form-control" %>
          </div>
          <div class="field">
            <%= f.label :image %><br />
            <%= f.file_field :image, class: "form-control input-form-control" %><br/>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control input-form-control',placeholder: 'Password' %>
          </div><br/>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-form-control',placeholder: 'Password' %>
          </div><br/>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          
          <div class="form-group row">
            <div class="col-md-12">
              <div class="pull-left">
                 <input type="hidden" name="existing_session_data" value="<%= session[:book].present? ? session[:book] : '' %>">
                <div class="actions" align="center">
                  <%= f.submit "Sign up", class: "btn btn-info" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </body>
</html>