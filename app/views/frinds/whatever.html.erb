<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %> |
      <%if Frind.where(user_id:current_user.id,friend_id: user.id,accepted: false).present? %>
      Request Sent
      <%elsif Frind.where(user_id:current_user.id,friend_id: user.id,accepted:true).present? %>
      Friend
      <%else %>
      <%= link_to "Add Friend", frinds_path(friend_id: user), method: :post %>
      <% end %>
    </li>
  <% end %>
</ul>
<ul>
    <% current_user.requested_frinds.each do |request| %>
    <li>
      <%= request.name %>
      <%= link_to "Accept",  frind_path(id: request.id), method: "put" %>
      <%= link_to "Decline", frind_path(id: request.id), method: :delete %>
    </li>
  <% end %>
</ul>
